<?xml version="1.0" encoding="utf-8"?>
<config>
  <append xpath="/windows">
    <window name="serverinfowindow" anchor="CenterTop" pos="-450,-100" width="900" height="800" cursor_area="true">
      <panel name="header" pos="0,0" height="43" depth="1" disableautobackground="true">
        <sprite depth="1" name="backgroundMain" sprite="menu_empty3px" pos="0,0" height="43" color="[black]"
                type="sliced" fillcenter="true" globalopacity="true" />
        <label style="header.name" pos="6,-6" text="Server Information" />
      </panel>
      <panel name="content" pos="0,-46" height="750" depth="1" pivot="center" disableautobackground="true">
        <sprite depth="6" name="border" sprite="menu_empty3px" pos="0,0" height="750" color="[black]" type="sliced"
                fillcenter="false" />
        <sprite depth="1" name="backgroundMain" sprite="menu_empty3px" pos="2,-2" height="746" width="896"
                color="[darkGrey]" type="sliced" fillcenter="true" globalopacity="true" globalopacitymod="0.95" />

        <label pos="10,-10" depth="2" text="Rules" />
        <grid pos="20,-42" depth="2" rows="0" cell_width="890" cell_height="26" repeat_content="false"
              arrangement="vertical">
          <label text="- [00ff00]Be excellent to each other[-]" font_size="22" />
        </grid>

        <label pos="10,-92" depth="2" text="Chat Commands" />
        <grid pos="20,-124" depth="2" cols="2" rows="0" cell_width="110" cell_height="26" repeat_content="false"
              arrangement="horizontal">
          <label text="- [00ff00]/claims[-]" font_size="22" />
          <label text="Land claims placed / available" font_size="22" />
          <label text="- [00ff00]/discord[-]" font_size="22" />
          <label text="Join our Discord" font_size="22" />
          <label text="- [00ff00]/map[-]" font_size="22" />
          <label text="Open the interactive map (find lost vehicles here)" font_size="22" />
          <label text="- [00ff00]/mods[-]" font_size="22" />
          <label text="Open the list of mods" font_size="22" />
          <label text="- [00ff00]/drone[-]" font_size="22" />
          <label text="Locate your drone" font_size="22" />
          <label text="- [00ff00]/dronefix[-]" font_size="22" />
          <label text="Teleport your drone to you when lost" font_size="22" />
          <label text="- [00ff00]/pzdiscord[-]" font_size="22" />
          <label text="Join the Project Z Discord" font_size="22" />
          <label text="- [00ff00]/pznexus[-]" font_size="22" />
          <label text="Open the Project Z page on Nexus Mods" font_size="22" />
        </grid>

        <label pos="10,-356" depth="2" text="Tips" />
        <grid pos="20,-390" depth="2" rows="0" cell_width="890" cell_height="26" repeat_content="false"
              arrangement="vertical">
          <label text="- We're playing [00ff00]Project Z[-]; try the pz commands above for more on the mod"
                 font_size="22" />
          <label
            text="- Blood hordes rain down [ff0000]daily at 4 AM, 1 PM, and 8 PM Eastern[-], regardless game day/time"
            font_size="22" />
          <label text="- Land claims are [00ff00]immune from player damage[-]" font_size="22" />
          <label
            text="- You will be [ff0000]removed from a land claim[-] if you are not partied with the owner or ally"
            font_size="22" />
          <label
            text="- Zombies can only enter your land claim if [00ff00]you or one of your allies are within 200 m[-]"
            font_size="22" />
          <label text="- Land claims and bedrolls [00ff00]cannot be placed in quest POIs (T1+)[-]" font_size="22" />
          <label text="- Boxes labeled [00ff00]sort[-] will auto-sort their contents to other boxes in your claim"
                 font_size="22" />
          <label text="- The server restarts at [00ff00]3 AM, noon, and 7 PM Eastern[-] every day" font_size="22" />
          <label
            text="- Type [00ff00]ggs[-] in the console to see the game settings, e.g. loot abundance and respawn"
            font_size="22" />
          <label
            text="- Craft and use [00ff00]foundation blocks[-] to eliminate terrain gaps on your builds"
            font_size="22" />
        </grid>
      </panel>
    </window>
  </append>
</config>

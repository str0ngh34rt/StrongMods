<?xml version="1.0" encoding="utf-8"?>
<config>
  <append xpath="/worldglobal/environment">
    <!--
                                           Allowed values    Allowed special characters   Comment
      ┌───────────── minute                0-59              * , - /
      │ ┌───────────── hour                0-23              * , - /
      │ │ ┌───────────── day of month      1-31              * , - / L W ?
      │ │ │ ┌───────────── month           1-12 or JAN-DEC   * , - /
      │ │ │ │ ┌───────────── day of week   0-6  or SUN-SAT   * , - / # L ?                Both 0 and 7 mean SUN
      │ │ │ │ │
      * * * * *
    -->
    <property name="blood_rain_schedule_irl" value="0 8,20 * * *" />  <!-- daily at 8 AM and 8 PM -->
    <property name="blood_rain_duration_irl_minutes" value="15" />
    <property name="blood_rain_min_game_day" value="7" />
  </append>
</config>

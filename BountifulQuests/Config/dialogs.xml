<config>
  <!-- Reset quests is now in the player menu, not the admin menu -->
  <remove xpath="/dialogs/dialog[@id='trader']/statement[@id='admin']/response_entry[@id='resetquests']" />
  <insertafter xpath="/dialogs/dialog[@id='trader']/statement[@id='start']/response_entry[@id='specialjobshave']">
    <response_entry id="resetquests" />
  </insertafter>

  <!-- Always offer jobs, even if player has already accepted one from this trader -->
  <remove xpath="dialogs/dialog[@id='trader']/response[@id='jobsnone']" />
  <remove
    xpath="dialogs/dialog[@id='trader']/response[starts-with(@id, 'jobshave')]/requirement[@type='QuestStatus']" />
</config>

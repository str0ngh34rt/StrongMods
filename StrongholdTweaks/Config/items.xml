      <property name="DescriptionKey" value="item_loot_container_small_mini_boss_desc_strong" />
      <property name="CustomIconTint" value="276182" />
      <property class="Action0">
        <property name="Class" value="OpenLootBundle" />
        <property name="Delay" value="0" />
